!-------------------------------------------------------------------------------

URxvt.depth: 32
URxvt.geometry: 90x30
URxvt.transparent: false
URxvt.fading: 0
URxvt.loginShell: false
URxvt.internalBorder: 3
URxvt.lineSpace: 0
URxvt.saveLines:32767

! Fonts
URxvt.allow_bold: false
!URxvt.font:xft:Monospace:size=11:style=regular:antialias=true, xft:WenQuanYi Micro Hei Mono:size=12:style=regular:antialias=true
URxvt.font:xft:Monospace:pixelsize=14:style=regular:antialias=true
URxvt.boldFont:
URxvt.multichar_encoding: utf-8
URxvt.imLocale: zh_CN.UTF-8

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle: plain
URxvt.scrollBar: false
URxvt.scrollBar_right: true
URxvt.scrollBar_floating: true

! Perl extensions
!URxvt.perl-ext-common: default,matcher
!URxvt.matcher.button: 1
!URxvt.urlLauncher: /usr/bin/google-chrome-stable

! Cursor
URxvt.cursorBlink: false
!URxvt.cursorColor: #657b83
URxvt.cursorUnderline: false

! Pointer
URxvt.pointerBlank: true

!URxvt.inheritPixmap: true

! {{{extension
URxvt*perl-ext-common: default,tabbed,matcher,clipboard,keyboard-select,url-select
! clipboard/(install xsel)
URxvt*keysym.M-w: perl:clipboard:copy
URxvt*keysym.C-y: perl:clipboard:paste
! keyboard-select
URxvt*keysym.M-Escape: perl:keyboard-select:activate
URxvt*keysym.C-s: perl:keyboard-select:search
! url-select
URxvt.keysym.M-u: perl:url-select:select_next
! }}}


! zenburn theme
URxvt*termName: rxvt-256color
URxvt*xftAntialias: true
URxvt*background: #3f3f3f
URxvt*foreground: #dcdccc
URxvt*cursorColor: #aaaaaa
Urxvt*colorUL: #669090
!URxvt*colorUL: #366060
URxvt*underlineColor: #dfaf8f
URxvt*color0: #3f3f3f
URxvt*color1: #cc9393
URxvt*color2: #7f9f7f
URxvt*color3: #d0bf8f
URxvt*color4: #6ca0a3
URxvt*color5: #dc8cc3
URxvt*color6: #93e0e3
URxvt*color7: #dcdccc
URxvt*color8: #000000
URxvt*color9: #dca3a3
URxvt*color10: #bfebbf
URxvt*color11: #f0dfaf
URxvt*color12: #8cd0d3
URxvt*color13: #dc8cc3
URxvt*color14: #93e0e3
URxvt*color15: #ffffff
